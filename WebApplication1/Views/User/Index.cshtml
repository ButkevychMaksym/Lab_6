@model IEnumerable<User>

<h2>List of users</h2>
<a href="@Url.Action("Create", "User")" class="btn btn-primary">Add User</a>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Surname</th>
			<th>Email</th>
			<th>Date of registration</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var user in Model)
		{
			<tr>
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.Email</td>
				<td>@user.RegistrationDate.ToShortDateString()</td>
				<td>
					<a href="@Url.Action("Details", "User", new { id = user.Id })">Details</a>
					|
					<a href="@Url.Action("Edit", "User", new { id = user.Id })">Edit</a>
					|
					<a href="@Url.Action("Delete", "User", new { id = user.Id })">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>